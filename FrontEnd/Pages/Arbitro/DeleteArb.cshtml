@page
@model FrontEnd.Pages.DeleteArbModel


@{ViewData["Title"]="Delete";
}
<h2>Eliminar Arbitro</h2>

<h4>@ViewData["Mensaje"] </h4>
<div class="form-horizontal">        
        <hr />        
        <div class="row">
           <div class="col-sm-4">
               <form method="post">                   
                   <input type="hidden" asp-for="Arbitro.Id" />
                   <div class="form-group">
                    <table class="table"> 
                        <thead>
                            <tr>
                                <th><label asp-for="Arbitro.Documento" class="control-label" ></label></th>
                                <th><label asp-for="Arbitro.Nombres" class="control-label"> </label></th>
                                <th><label asp-for="Arbitro.Apellidos" class="control-label"> </label></th>
                            </tr>
                        </thead>
                        <tr>
                            <td>@Model.Arbitro.Documento</td> 
                            <td>@Model.Arbitro.Nombres</td>
                            <td>@Model.Arbitro.Apellidos</td>
                        </tr>
                    </table>       
                   </div>
                   <div class="form-group">                       
                       <input type="submit" value="Eliminar" class="btn btn-danger"/>                       
                   </div>
               </form>
           </div>
        </div>

        <div>
            <a asp-page="ArbIndex" class="btn btn-warning"> Ir a Indice Arbitros</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
