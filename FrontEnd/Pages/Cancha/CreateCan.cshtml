@page
@model FrontEnd.Pages.CreateCanModel
@{ViewData["Title"]="Create";
}
<h1>Crear Cancha</h1>
<h3>@ViewData["Mensaje"]</h3>

<div class="form-horizontal">  @* Clase CSS  *@
    <hr />
    <div class="row">  @*  Clase CSS Para manejo de filas *@
        <div class=col-md-4>   @*  Clase CSS Para manejo de Columnas *@
            <form method="POST">
                <div>   </div>
                <div class="form-group">   @*  Clase CSS Para manejo de grupos*@
                    
                    <label asp-for="Cancha.Nombre" class="control-label">  </label>
                    <input asp-for="Cancha.Nombre" class="form-control"/>
                    
                    <label asp-for="Cancha.DisciplinaDep" class="control-label">  </label>
                    <input asp-for="Cancha.DisciplinaDep" class="form-control"/>
                    <label asp-for="Cancha.Estado" class="control-label">  </label>
                    <input asp-for="Cancha.Estado" class="form-control"/>
                    <label asp-for="Cancha.CapacidadEsp" class="control-label">  </label>
                    <input asp-for="Cancha.CapacidadEsp" class="form-control"/>
                    <label asp-for="Cancha.Medidas" class="control-label">  </label>
                    <input asp-for="Cancha.Medidas" class="form-control"/>
                    <label asp-for="Cancha.EscenarioId" class="control-label">  </label>
                    <input asp-for="Cancha.EscenarioId" class="form-control"/>


                </div>
                <div class="form-group">   @*  Clase CSS Para manejo de grupos *@
                    <input type="submit" value="Crear" class="btn btn-primary" />

                </div>

            </form>

        </div>
    </div>
    <div>
        <a asp-page="CanIndex">Ir al Inicio</a>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}