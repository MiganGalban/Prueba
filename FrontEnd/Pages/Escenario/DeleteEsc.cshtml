@page
@model FrontEnd.Pages.DeleteEscModel
@{
    ViewData["Title"]="Delete";
}
<h1>Delete</h1>
<h4>Escenario</h4>
<h2>@ViewData["Mensaje"] </h2>
<div class="form-horizontal">        
        <hr />        
        <div class="row">
           <div class="col-md-4">
               <form method="post">                   
                   <input type="hidden" asp-for="Escenario.Id" />
                   <div class="form-group">
                       
                        <label asp-for="Escenario.Nombre" class="control-label">  </label>
                        <input asp-for="Escenario.Nombre" readonly class="form-control"/>
                        <label asp-for="Escenario.Direccion" class="control-label">  </label>
                        <input asp-for="Escenario.Direccion" readonly class="form-control"/>
                                       
                        
                   </div>
                   <div class="form-group">                       
                       <input type="submit" value="Eliminar" class="btn btn-primary"/>                       
                   </div>
               </form>
           </div>
        </div>

        <div>
            <a asp-page="EscIndex"> Back to List</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
