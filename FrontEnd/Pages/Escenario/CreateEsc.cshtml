@page
@model FrontEnd.Pages.CreateEscModel
@{
    ViewData["Title"]="Create";
}
<h1>Crear Escenario</h1>
<h3>@ViewData["Mensaje"]</h3>

<div class="form-horizontal">  @* Clase CSS  *@
    <hr />
    <div class="row">  @*  Clase CSS Para manejo de filas *@
        <div class=col-md-4>   @*  Clase CSS Para manejo de Columnas *@
            <form method="POST">
                <div>   </div>
                <div class="form-group">   @*  Clase CSS Para manejo de grupos*@
                    <label asp-for="Escenario.Nombre" class="control-label">  </label>
                    <input asp-for="Escenario.Nombre" class="form-control"/>
                    <label asp-for="Escenario.Direccion" class="control-label">  </label>
                    <input asp-for="Escenario.Direccion" class="form-control"/>
                    <label asp-for="Escenario.NumTelf" class="control-label">  </label>
                    <input asp-for="Escenario.NumTelf" class="form-control"/>
                    <label asp-for="Escenario.Horario" class="control-label">  </label>
                    <input asp-for="Escenario.Horario" class="form-control"/>
                    <label asp-for="Escenario.TorneoId" class="control-label">  </label>
                    <input asp-for="Escenario.TorneoId" class="form-control"/>

                </div>
                <div class="form-group">   @*  Clase CSS Para manejo de grupos *@
                    <input type="submit" value="Crear" class="btn btn-primary" />

                </div>

            </form>

        </div>
    </div>
    <div>
        <a asp-page="EscIndex">Ir al Inicio</a>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}